<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>User</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/user">Home</a></li>
            <li class="breadcrumb-item active">Create</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <!-- general form elements -->
      <div class="card card-primary">
        <div class="card-header">
          <h3 class="card-title">Update User</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form action="/user/update/<%= user._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
          <div class="card-body">
            <div class="form-group">
              <input type="text" name="name" id="name" placeholder="Enter amount
              seat" <% if(user.status==="enable"){ %> class="form-control
              bg-success" value="Actice" <% }else{ %> class="form-control
              bg-danger" value="Not active" <% } %> disabled />
            </div>
            <div class="form-group">
              <label for="name">Name</label>
              <input
                type="text"
                class="form-control"
                name="name"
                id="name"
                placeholder="Enter amount seat"
                value="<%= user.name %>"
              />
            </div>
            <div class="form-group">
              <label for="phoneNumber">Phone</label>
              <input
                type="number"
                class="form-control"
                name="phoneNumber"
                id="phoneNumber"
                placeholder="Enter amount seat"
                value="0<%= user.phoneNumber %>"
              />
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input
                type="email"
                class="form-control"
                name="email"
                id="email"
                placeholder="Enter email"
                value="<%= user.email %>"
              />
            </div>
            <div class="form-group">
              <label for="gender">Gender</label>
              <select class="form-control select2" name="gender" id="gender">
                <option value="Pria"
                <% if(user.gender === "Pria"){ %>
                    selected 
                <% } %> 
                >Pria</option>
                <option value="Wanita"
                <% if(user.gender === "Wanita"){ %>
                    selected 
                <% } %> 
                >Wanita</option>
              </select>
            </div>
            <div class="form-group">
              <label for="ttl">TTL</label>
              <input
                type="text"
                class="form-control"
                name="ttl"
                id="ttl"
                placeholder="Enter amount seat"
                value="<%= user.ttl %>"
              />
            </div>
            <div class="form-group">
              <label for="venue">Venue</label>
                <select class="form-control select2" name="venue" id="venue">
                  <% venues.map(venue=>{ %>
                  <option value="<%= venue._id %>" 
                    <% if(user.venue.toString() === venue._id.toString()){ %>
                    selected 
                    <% } %>>
                    <%= venue.location %>
                  </option>
                  <% }) %>
                </select>
            </div>
            <div class="form-group">
              <label for="address">Address</label>
              <textarea
                type="text"
                class="form-control"
                name="address"
                id="address"
                placeholder="Enter address"
                cols="10"
                rows="5"
              >
value="<%= user.address %>"</textarea
              >
              <div class="form-group">
                <label for="image">Foto</label>
                <input
                  type="file"
                  class="form-control"
                  name="image"
                  id="image"
                  placeholder="Enter image seat"
                />
              </div>
              <img
                class="mb-2"
                src="http://localhost:3000/uploads/user/<%= user.thumbnail %> "
                id="preview"
                alt=""
              />
            </div>
          </div>
          <!-- /.card-body -->

          <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>
      <!-- /.card -->
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include ../../partials/footer.ejs %>
<!-- ./wrapper -->
<%- include ../../partials/javascript.ejs %>
