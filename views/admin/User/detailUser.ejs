<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Detail</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/user">Home</a></li>
            <li class="breadcrumb-item active">Detail</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <!-- general form elements -->
      <div class="card card-primary">
        <div class="card-header">
          <h3 class="card-title">Detail User</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form action="/user/create" method="POST" enctype="multipart/form-data">
          <div class="card-body">
            <div class="form-group">
              <input type="text" name="name" id="name" placeholder="Enter amount
              seat" <% if(user.status==="enable"){ %> class="form-control
              bg-success" value="Actice" <% }else{ %> class="form-control
              bg-danger" value="Not active" <% } %> disabled />
            </div>
            <img
              class="mb-2"
              src="http://localhost:3000/uploads/user/<%= user.thumbnail %> "
              id="preview"
              alt=""
            />
            <div class="form-group">
              <label for="name">Name</label>
              <input
                type="text"
                class="form-control"
                name="name"
                id="name"
                placeholder="Enter amount seat"
                value="<%= user.name %>"
                disabled
              />
            </div>
            <div class="form-group">
              <label for="phoneNumber">Phone</label>
              <input
                type="number"
                class="form-control"
                name="phoneNumber"
                id="phoneNumber"
                placeholder="Enter amount seat"
                value="0<%= user.phoneNumber %>"
                disabled
              />
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input
                type="email"
                class="form-control"
                name="email"
                id="email"
                placeholder="Enter email"
                value="<%= user.email %>"
                disabled
              />
            </div>
            <div class="form-group">
              <label for="role">Role</label>
              <input
                type="text"
                class="form-control"
                name="role"
                id="role"
                placeholder="Enter amount seat"
                value="<%= user.role %>"
                disabled
              />
            </div>
            <div class="form-group">
              <label for="gender">Gender</label>
              <input
                type="text"
                class="form-control"
                name="gender"
                id="gender"
                value="<%= user.gender %>"
                disabled
              />
            </div>
            <div class="form-group">
              <label for="ttl">TTL</label>
              <input
                type="text"
                class="form-control"
                name="ttl"
                id="ttl"
                placeholder="Enter amount seat"
                value="<%= user.ttl %>"
                disabled
              />
            </div>
            <div class="form-group">
              <label for="venue">Venue</label>
              <input
                type="text"
                class="form-control"
                name="venue"
                id="venue"
                placeholder="Enter amount seat"
                value="<%= user.venue.location %> | <%= user.venue.address %>"
                disabled
              />
            </div>
            <div class="form-group">
              <label for="address">Address</label>
              <textarea
                type="text"
                class="form-control"
                name="address"
                id="address"
                placeholder="Enter address"
                cols="10"
                rows="5"
                disabled
              >
value="<%= user.address %>"</textarea
              >
              <div class="form-group">
                <label for="image">Foto</label>
              </div>
            </div>
          </div>
          <!-- /.card-body -->

          <div class="card-footer">
            <a href="/user" type="submit" class="btn btn-primary">Back</a>
            <a
              href="/user/update/<%= user._id %>"
              type="submit"
              class="btn btn-primary"
              >Edit</a
            >
          </div>
        </form>
      </div>
      <!-- /.card -->
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include ../../partials/footer.ejs %>
<!-- ./wrapper -->
<%- include ../../partials/javascript.ejs %>
