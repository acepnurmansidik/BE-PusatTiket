<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Ticket</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/ticket">Home</a></li>
            <li class="breadcrumb-item active">Create</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <!-- general form elements -->
      <div class="card card-primary">
        <div class="card-header">
          <h3 class="card-title">Create New Ticket</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form action="/user/create" method="POST" enctype="multipart/form-data">
          <div class="card-body">
            <div class="form-group">
              <label for="name">Name</label>
              <input
                type="text"
                class="form-control"
                name="name"
                id="name"
                placeholder="Enter amount seat"
                required
              />
            </div>
            <div class="form-group">
              <label for="phoneNumber">Phone</label>
              <input
                type="number"
                class="form-control"
                name="phoneNumber"
                id="phoneNumber"
                placeholder="Enter amount seat"
                required
              />
            </div>
            <div class="form-group">
              <label for="gender">Gender</label>
              <select class="form-control select2" name="gender" id="gender">
                <option value="Pria">Pria</option>
                <option value="Wanita">Wanita</option>
              </select>
            </div>
            <div class="form-group">
              <label for="ttl">TTL</label>
              <input
                type="date"
                class="form-control"
                name="ttl"
                id="ttl"
                placeholder="Enter ttl seat"
                required
              />
            </div>
            <div class="form-group">
              <label for="venue">Venue</label>
              <div class="select2-purple">
                <select class="form-control select2" name="venue" id="venue">
                  <option value="">--Select venue---</option>
                  <% venues.map(venue=>{ %>
                  <option value="<%= venue._id %>">
                    <%= venue.location %>
                  </option>
                  <% }) %>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label for="address">Address</label>
              <textarea
                type="text"
                class="form-control"
                name="address"
                id="address"
                placeholder="Enter address"
                cols="10"
                rows="5"
                required
              ></textarea>
              <div class="form-group">
                <label for="image">Foto</label>
                <input
                  type="file"
                  class="form-control"
                  name="image"
                  id="image"
                  placeholder="Enter image seat"
                />
              </div>
              <img src="" id="preview" alt="" />
            </div>
          </div>
          <!-- /.card-body -->

          <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>
      <!-- /.card -->
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include ../../partials/footer.ejs %>
<!-- ./wrapper -->
<%- include ../../partials/javascript.ejs %>
