<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Film</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/film">Home</a></li>
            <li class="breadcrumb-item active">Detail</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <!-- general form elements -->
      <div class="card card-primary">
        <div class="card-header">
          <h3 class="card-title">Detail Film</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form action="/film/create" method="POST">
          <div class="card-body">
            <img src="http://localhost:3000/uploads/film/<%= film.thumbnail %> " id="preview" alt="" />
            <div class="form-group">
              <label for="title">Title</label>
              <input
                type="text"
                class="form-control"
                name="title"
                id="title"
                placeholder="Enter title film"
                value="<%= film.title %>"
                disabled
              />
            </div>
            <div class="form-group">
              <label for="genres">Genre</label>
              <div class="select2-purple">
                <select
                  class="form-control select2"
                  multiple="multiple"
                  name="genres"
                  id="genres"
                  disabled
                >
                  <% genres.map(genre=>{ %>
                  <option value="<%= genre._id %>" 
                    <% film.genres.map(item=>{ %>
                      <% if(item._id.toString() === genre._id.toString()){ %>
                        selected
                      <% } %> 
                    <% }) %> 
                  ><%= genre.name %></option>
                  <% }) %>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label for="actor">Actor</label>
              <input
                type="text"
                class="form-control"
                name="actor"
                id="actor"
                placeholder="Enter actor"
                value="<%= film.actor %>"
                disabled
              />
            </div>
            <div class="form-group">
              <label for="director">Director</label>
              <input
                type="text"
                class="form-control"
                name="director"
                id="director"
                placeholder="Enter directore"
                value="<%= film.director %>"
                disabled
              />
            </div>
            <div class="form-group">
              <label for="writter">Writter</label>
              <input
                type="text"
                class="form-control"
                name="writter"
                id="writter"
                placeholder="Enter writter"
                value="<%= film.writter %>"
                disabled
              />
            </div>
            <div class="form-group">
              <label for="rating">Rating</label>
              <input
                type="number"
                class="form-control"
                name="rating"
                id="rating"
                placeholder="Enter rating"
                value="<%= film.rating %>"
                disabled
              />
            </div>
            <div class="form-group">
              <label for="synopsis">Synopsis</label>
              <textarea
                name="synopsis"
                id="synopsis"
                cols="20"
                rows="6"
                class="form-control"
                disabled
              >
<%= film.synopsis %></textarea
              >
            </div>
          </div>
          <!-- /.card-body -->
          <div class="card-footer">
            <a href="/film" type="submit" class="btn btn-primary">Back</a>
            <a href="/film/update/<%= film._id %>" class="btn btn-primary">Edit</a>
          </div>
        </form>
      </div>
      <!-- /.card -->
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include ../../partials/footer.ejs %>
<!-- ./wrapper -->
<%- include ../../partials/javascript.ejs %>