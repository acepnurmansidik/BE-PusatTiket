<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Ticket</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/ticket">Home</a></li>
            <li class="breadcrumb-item active">Detail</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <!-- general form elements -->
      <div class="card card-primary">
        <div class="card-header">
          <h3 class="card-title">Detail Ticket</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form action="/ticket/create" method="POST">
          <div class="card-body">
            <div class="form-group">
              <label for="film">Film</label>
              <div class="select2-purple">
                <input
                  type="text"
                  class="form-control"
                  name="seatNumber"
                  id="seatNumber"
                  placeholder="Enter amount seat"
                  value="<%= ticket.film.title %>"
                  disabled
                />
              </div>
            </div>
            <div class="form-group">
              <label for="nominals">Nominal</label>
              <div class="select2-purple">
                <select
                  class="form-control select2"
                  name="nominals"
                  multiple="multiple"
                  id="nominals"
                  disabled
                >
                  <option value="<%= ticket.nominal._id %>" selected>
                    <%= ticket.nominal.typeName %> | <%= ticket.nominal.price %>
                  </option>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label for="seatNumber">Amount Seat</label>
              <input
                type="text"
                class="form-control"
                name="seatNumber"
                id="seatNumber"
                placeholder="Enter amount seat"
                value="<%= ticket.seatNumber %>"
                disabled
              />
            </div>
          </div>
          <!-- /.card-body -->

          <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>
      <!-- /.card -->
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include ../../partials/footer.ejs %>
<!-- ./wrapper -->
<%- include ../../partials/javascript.ejs %>
